@import "canter/stylesheet.css"
@import "fa/css/font-awesome.min.css"

body
html
  padding 0px
  margin 0px
  width 100%
  height 100%

.section
  width 100%
  height 100%
  background-size cover
  background-position center
  box-sizing border-box
  padding 5%
  min-height 800px
  color white
  font-family canterbold

#hero
  background-image url("/img/bergen-1.jpg")
  #hero-group
    height 100%
    max-width 90%
    margin 0 auto
    background-size contain
    background-position center
    background-repeat no-repeat

#instructors
  background-image url("/img/bergen-2.jpg")

  #instructors-group
    width 100%
    box-sizing border-box
    height 100%

    .with, .and
      display block
      margin 0 auto

    .with
      width 80px
      margin-bottom 25px

    .and
      margin-top 60px
      width 50px

    .instructor
      margin-top -25px
      text-align center

    .instructor-img
      width 140px
      border-radius 1000px
      vertical-align middle
      border 6px double white

    .instructor-name
      font-size 65px
      vertical-align middle
      display inline-block
      text-shadow 0px 1px 2px black

      &.smaller
        font-size 50px

      &.pad-before
        margin-left 40px

      &.pad-after
        margin-right 40px

    @media (max-width: 1100px)

      .instructor-img
        width 100px
      .instructor-name
        &.pad-before
          margin-right 20px
        &.pad-after
          margin-right 20px

    @media (max-width: 700px)

      .instructor-name
        font-size 50px

        &.smaller
          font-size 40px



#logistics
  background-image url("/img/bergen-3.jpg")

  #logistics-group
    font-family BoltonLight
    font-size 28px
    line-height 44px
    width 50%
    max-width 600px
    margin 5% auto 0%
    text-shadow 0px 1px 2px black
    text-align center

    .simple-ornament
      width 25%
      display block
      margin 20px auto

    .detailed-ornament
      width 50%
      display block
      margin 20px auto

    @media (max-width: 800px)
      width 100%

#footer
  background-image url("/img/bergen-foot.jpg")
